<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">

    <t t-name="photoupload" owl="1">
        <div class="modal fade" id="photoUpload" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Upload Photo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">*</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <label class="form-label" for="customFile">Choose Photo</label>
                        <input type="file" class="form-control" id="customFile" t-on-change="onChangeFile"/>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" t-on-click="onSaveFile">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </t>

</template>