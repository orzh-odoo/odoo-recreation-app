<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">
    
    <t t-name="match" owl="1">
        <div class="match" t-on-click="onClick">
            <div class="namePreview" t-esc="getName"/>
            <div class="scorePreview">
                <t t-foreach="getResults" t-as="result" t-key="result.id">
                    <div class="result" t-att-class="result.team_id === getWinnerId ? 'winnerNamePreview' : 'loserNamePreview'" t-esc="`${result.teamName} - ${result.points}`"/>
                </t>
            </div>
            <div class="activityPreview" t-esc="getActivity"/>
            <div class="startTimePreview" t-esc="getStartTime"/>
        </div>
    </t>

</template>