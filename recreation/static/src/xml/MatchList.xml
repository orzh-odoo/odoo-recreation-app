<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">
    
    <t t-name="matchlist" owl="1">
        <div class="matchlist-container">
            <div class="matchlist">
                <h1 class="title">Matches</h1>
                <div class="matchlist-content">
                    <div class="header">
                        <div class="namePreview">Name</div>
                        <div class="scorePreview">Results</div>
                        <div class="activityPreview">Activity</div>
                        <div class="startTimePreview">Time</div>
                    </div>
                    <div class="match-elements">
                        <t t-foreach="activeMatchElements" t-as="matchElement" t-key="matchElement.id">
                            <Match data="matchElement" onClick="props.onMatchItemClick"/>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>

</template>